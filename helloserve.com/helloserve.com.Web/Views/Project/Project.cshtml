@model helloserve.com.Web.Models.Data.ProjectDataModel
@{
    ViewBag.Title = Model.Title;
    bool hasMedia = Model.Media.Count > 0;
    string backgroundColor = ViewBag.BackgroundColor ?? string.Empty;
    string color = ViewBag.Color ?? string.Empty;
}

<div class="content-page" style="@if (hasMedia) { <text>height:auto;</text> } @if (!string.IsNullOrEmpty(Model.ImageUrl)) { <text>background-image:url(@Html.StaticlinkContent(Model.ImageUrl)); </text> }">
    <div class="background-cover" style="background-color:@(backgroundColor.ToRgba(0.5)); color:@(color)">
        <div style="padding:2em;">
            <h2>@Model.Title</h2>
            <div style="width:100%">
                @Html.Raw(Model.Cut)
            </div>
            <div style="width:100%">
                @Html.Raw(Model.Content)
            </div>
        </div>
        @if (Model.Media.Count > 0)
        {
            <div style="padding:0 2em; text-align:center">
                @for (int i = 0; i < Model.Media.Count; i++)
                {
                    <div style="padding:0.5em 0">
                        <img src="@(ViewBag.BaseUrl)@Model.Media[i].Url" width="90%" height="auto" />
                    </div>
                }
            </div>
        }
    </div>
</div>
@foreach (var item in Model.News.ListItems)
{
    @Html.DisplayFor(m => item);
}

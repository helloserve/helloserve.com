@model helloserve.com.Web.Models.BlogViewModel
@{
    ViewBag.Title = "helloserve Admin - Blogs";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Blogs</h2>

<div>
    <div>@Html.ActionLink("Add", "blog")</div>
    @foreach (var post in Model.BlogPosts.ListItems)
    {
        <div>
            @Html.ActionLink(post.Title, "blog", new { id = (post as helloserve.com.Web.Models.Data.NewsDataModel).NewsId })
        </div>
    }
</div>
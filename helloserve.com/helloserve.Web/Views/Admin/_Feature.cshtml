@model AdminFeatureModel
@using (Html.BeginForm("SaveFeature", "Admin", FormMethod.Post, new { id = "adminFeatureForm" }))
{
    <div>
        @if (Model.Feature.IsNew())
        {
            <h2>
                Add Feature</h2>
        }
        else
        {
            <h2>
                Edit Feature</h2>
        }
        <div id="mainFeatureEdit" style="width: 50%; float: left;">
            <fieldset>
                <legend>Feature Details</legend>
                <div id="featureDetails">
                    <div>
                        <div>
                            ID</div>
                        <div>@Html.DisplayFor(model => model.Feature.FeatureID)</div>
                        @Html.HiddenFor(model => model.Feature.FeatureID)
                    </div>
                    <div>
                        <div>
                            Main Feature @Html.CheckBoxFor(model => model.Feature.IsMainFeature, new { style = "width:25px" })</div>
                    </div>
                    <div>
                        <div>
                            Name</div>
                        <div>@Html.TextBoxFor(model => model.Feature.Name, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Description</div>
                        <div>@Html.TextAreaFor(model => model.Feature.Description, new { @class = "cut" })</div>
                    </div>
                    <div>
                        <div>
                            Extended Description</div>
                        <div>@Html.TextAreaFor(model => model.Feature.ExtendedDescription, new { @class = "post" })</div>
                    </div>
                    <div>
                        <div>
                            Media Folder</div>
                        <div>@Html.TextBoxFor(model => model.Feature.MediaFolder, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Header Image ID (800x400, thumb main feature:605x250 else 300x150)</div>
                        <div>@Html.TextBoxFor(model => model.Feature.HeaderImageID, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Subdomain (e.g. http://stringray.helloserve.com)</div>
                        <div>@Html.TextBoxFor(model => model.Feature.Subdomain, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Custom Page</div>
                        <div>@Html.TextBoxFor(model => model.Feature.CustomPage, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Indie DB Link</div>
                        <div>@Html.TextBoxFor(model => model.Feature.IndieDBLink, new { style = "width:500px" })</div>
                    </div>
                    <div>
                        <div>
                            Created Date</div>
                        <div>@Html.DatePicker("Feature.CreatedDate", Model.Feature.CreatedDate.ToDisplayString())&nbsp;<a href="" onclick="Admin.CopyVal('Feature_CreatedDate', 'Feature_ModifiedDate'); return false;">Copy to Modified</a></div>
                    </div>
                    <div>
                        <div>
                            Modified Date</div>
                        <div>@Html.DatePicker("Feature.ModifiedDate", DateTime.Now.ToDisplayString())</div>
                    </div>
                </div>
            </fieldset>
        </div>
        @if (!Model.Feature.IsNew())
        {
            <div style="width: 49%; float: right" id="featureDownloadables">
                @Html.Partial("_FeatureDownloads", Model.DownloadableModel)
            </div>
            <div style="width: 49%; float: right" id="featureRequirements">
                @Html.Partial("_FeatureRequirements", Model.RequirementModel)
            </div>
            <div style="width: 49%; float: right" id="featureRelated">
                @Html.Partial("_FeatureRelated", Model.RelatedLinks)
            </div>
            <div style="width: 49%; float: right">
                <fieldset>
                    <legend>Media</legend>
                    <div id="featureMedia">
                        @Html.Partial("_MediaMaintainItems", AdminMediaModel.ForFeature(Model.Feature.FeatureID))
                    </div>
                    <div>
                        Add Media</div>
                </fieldset>
            </div>
        }
        <div style="clear: both">
            <div class="controlDiv">
                <input type="submit" id="SaveFeature" value="Save" />
                <a href="" onclick="Admin.CancelAction()">Cancel</a>
            </div>
        </div>
    </div>
}
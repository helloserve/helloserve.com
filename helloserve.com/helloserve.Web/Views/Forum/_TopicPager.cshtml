@model ForumTopicModel
<div style="width: 800px">
    <div class="forumPager">
        @if (Model.CurrentPage < Model.Pages - 1)
        {
                @Html.ActionLink("Next", "ForumTopic", "Forum", new { forum = Model.Forum.Name, category = Model.Category.Name, topicID = Model.Topic.ForumTopicID, page = (Model.CurrentPage + 1).ToString() }, null)
        }
        else
        {
            <span>Next</span>
        }
    </div>
    @for (int i = Model.CurrentPage + 1; i >= Model.CurrentPage - 1; i--)
    {
            if ((i < 0) || (i > Model.Pages - 1))
            {
                <div class="forumPagerEmpty">
                    <span></span>
                </div>
            }
            else if (i == Model.CurrentPage)
            {
                <div class="forumPager">
                        <span>Page @(i + 1)</span>
                </div>
            }
            else
            {
                <div class="forumPager">
                    @Html.ActionLink(string.Format("Page {0}", i + 1), "ForumTopic", "Forum", new { forum = Model.Forum.Name, category = Model.Category.Name, topicID = Model.Topic.ForumTopicID, page = i.ToString() }, null)
                </div>
            }
    }
    <div class="forumPager">
        @if (Model.CurrentPage > 0)
        {
            @Html.ActionLink("Prev", "ForumTopic", "Forum", new { forum = Model.Forum.Name, category = Model.Category.Name, topicID = Model.Topic.ForumTopicID, page = (Model.CurrentPage - 1).ToString() }, null)        
        }
        else
        {
            <span>Prev</span>
        }
    </div>
</div>

@{
    ViewBag.Title = "Home Page";
}
@model HomeModel
<h2>@ViewBag.Message</h2>
<div>
    <div style="width: 49%; float:left;">
    @foreach (var feature in Model.LatestFeatures)
    {
        Html.RenderPartial("_Feature", feature);
    }
    </div>
    <div style="width: 49%; float:right">
    @foreach (var blog in Model.LatestBlogPosts)
    {
        Html.RenderPartial("_Blog", blog);
    }
    @foreach (var news in Model.LatestNews)
    {
        Html.RenderPartial("_News", news);
    }
    </div>
    <div style="clear:both">
    </div>
</div>

@model Feature
<a href="@(Model.Link)" title="@(Model.Name)" style="text-decoration:none" class="aFeature">
<div id="Feature@(Model.FeatureID)" class="featureBlock" style="width:300px; height:150px; display:inline-block; background-image:url('/Thumb/@(Model.HeaderImageID ?? -1)'); background-color:#DD2222;">
    <div style="padding:5px; height:150px; position:relative;">
        <div style="display:inline-block">
                <h2>@Model.Name</h2>
        </div>
        <div class="description" style="width:285px; position:absolute; bottom:15px; font-size:medium;">@Model.Description</div>
        <div class="descriptionText" style="width:285px; position:absolute; bottom:15px; font-size:medium;">@Model.Description</div>
    </div>
</div>
</a>


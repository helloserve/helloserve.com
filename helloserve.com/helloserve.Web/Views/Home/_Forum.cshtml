@model ForumPostModel
<a href="/Forum/ForumPost?forum=@(Model.Forum.Name)&category=@(Model.Category.Name)&topicID=@(Model.Topic.ForumTopicID)&postID=@(Model.Post.ForumPostID)" style="text-decoration:none">
<div id="ForumPost@(Model.Post.ForumPostID)" class="contentBlock">
    <div>
        <h3>@Model.Topic.Name</h3>
        <div>@Model.Forum.Name > @Model.Category.Name </div>
        <div>@Model.Post.User.Username | @Model.Post.Date.ToShortDateString()</div>
    </div>
    <div><p>@Model.Post.Post.Substring(0, Math.Min(200, Model.Post.Post.Length))...</p></div>
</div>
</a>
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <style type="text/css">
        @@font-face {
         font-family: 'ProximaNovaSemibold';
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Sbold-webfont.eot")');
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Sbold-webfont.eot")') format('eot'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Sbold-webfont.woff")') format('woff'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Sbold-webfont.ttf")') format('truetype'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Sbold-webfont.svg")') format('svg');
         font-weight: normal;
         font-style: normal;
        }

        @@font-face {
         font-family: 'ProximaNovaRegular';
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Reg-webfont.eot")');
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Reg-webfont.eot")') format('eot'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Reg-webfont.woff")') format('woff'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Reg-webfont.ttf")') format('truetype'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Reg-webfont.svg")') format('svg');
         font-weight: normal;
         font-style: normal;
        } 

        @@font-face {
         font-family: 'ProximaNovaLight';
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Light-webfont.eot")');
         src: url('@Url.Content("~/Content/fonts/ProximaNova-Light-webfont.eot")') format('eot'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Light-webfont.woff")') format('woff'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Light-webfont.ttf")') format('truetype'),
         url('@Url.Content("~/Content/fonts/ProximaNova-Light-webfont.svg")') format('svg');
         font-weight: normal;
         font-style: normal;
        }

    </style>

    @IncludeJS("Built-In/jquery-1.7.2.min.js",
                "Built-In/jquery-ui-1.8.21.custom.min.js",
                "Built-In/jquery.validate.min.js",
                "Built-In/jquery.validate.unobtrusive.min.js",
                "Built-In/jquery.numeric.js",
                "Built-In/json2.js")
    <script type="text/javascript" language="javascript">
        window.GetUrl = function (url) {
            return '@Url.Content("~/")' + url;
        }
    </script>
    @IncludeControllerScript()
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Action("LogOnPartial", "Account")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (helloserve.Web.Settings.Current.User != null)
                    {
                        if (helloserve.Web.Settings.Current.User.Administrator)
                        {
                        <li>@Html.ActionLink("Admin", "Admin", "Admin")</li>
                        }
                        else
                        {
                        <li>@Html.ActionLink("Store", "Store", "Store")</li>   
                        }
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>

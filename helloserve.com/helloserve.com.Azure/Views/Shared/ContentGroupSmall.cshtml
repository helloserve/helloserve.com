@model helloserve.com.Azure.Models.Data.CollectionViewModel

<div class="content-group">
    @if (Model.ListItems.Count == 3)
    {
        <div class="content-container" style="width:auto; height:100%; display:flex">
            <div class="half-width" style="display:inline-block; height:100%;">@Html.DisplayFor(m => m.ListItems[0], "ContentDataModelSmall")</div><div class="half-width" style="display:inline-block; height:100%;">@Html.DisplayFor(m => m.ListItems[1], "ContentDataModelSmall")</div><div class="half-width" style="display:inline-block; height:100%;">@Html.DisplayFor(m => m.ListItems[2], "ContentDataModelSmall")</div>
        </div>
    }
    else if (Model.ListItems.Count == 2)
    {
        <div class="content-container" style="width:auto; height:100%; display:flex">
            <div style="display:inline-block; width:100%; height:100%;">@Html.DisplayFor(m => m.ListItems[0], "ContentDataModelSmall")</div><div style="display:inline-block; width:100%; height:100%;">@Html.DisplayFor(m => m.ListItems[1], "ContentDataModelSmall")</div>
        </div>
    }
</div>


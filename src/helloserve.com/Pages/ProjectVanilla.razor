@using helloserve.com.Models

@if (Project == null)
{
    <div class="container">
        <p>Loading...</p>
    </div>
}
else
{
    <div class="jumbotron">
        <div class="container text-center">
            <h3 class="display-3">@Project.Name</h3>
        </div>
        <div class="container text-center">
            <img src="@Project.ImageUrl" style="max-width:80%;" />
        </div>
    </div>
    <div class="container">
        <p>
            @Project.Description
        </p>
    </div>

    <CascadingAuthenticationState>
        <CascadingValue Name="OwnerKey" Value="@Project.Key">
            <BlogItems />
        </CascadingValue>
    </CascadingAuthenticationState>
}

@code {
    [Parameter]
    public ProjectView Project { get; set; }

    [Parameter]
    public int PageSize { get; set; }

    Type customPageType;

    public class Parameters
    {
        public ProjectView Project { get; set; }
        public int PageSize { get; set; }
    }
}

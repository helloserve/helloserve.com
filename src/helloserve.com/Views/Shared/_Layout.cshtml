    </environment>
    <link href="/css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <div class="sidebar">
            @(await Html.RenderComponentAsync<helloserve.com.Shared.NavMenu>())
        </div>

        <div class="main">
            <div class="content px-4">
                @RenderBody()
            </div>
        </div>
    </app>
    <environment exclude="Development">
        <script>
            (function (i, s, o, g, r, a, m) {
